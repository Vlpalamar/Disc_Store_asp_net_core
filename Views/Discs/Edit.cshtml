@model Disc_Store.Entities.Disc

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Disc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateOfPublish" class="control-label"></label>
                <input asp-for="dateOfPublish" class="form-control" />
                <span asp-validation-for="dateOfPublish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="band" 
                        class="form-control" asp-items="ViewBag.BandId">
                    <option disabled="disabled" selected="selected">добавить группе музыкантов </option>
                </select>
                <select asp-for="label" 
                        class="form-control" asp-items="ViewBag.LableId">
                    <option disabled="disabled" selected="selected">добавить группе диски </option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
